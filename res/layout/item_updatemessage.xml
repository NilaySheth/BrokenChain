<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp" >

   
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/imgJoin"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/txtOriginal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#533419"
            android:text="Original Message"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/txtShortMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:singleLine="false"
            android:layout_marginTop="5dp"
            android:textColor="#FF6600"
            android:text="Updated Message"
            android:textIsSelectable="false" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgJoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/orenge_arrow" />

</RelativeLayout>